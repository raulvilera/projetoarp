{
    "rewrites": [
        {
            "source": "/api/subscription/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/dashboard/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/companies",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/health",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/submit-survey",
            "destination": "/api/responses.ts"
        },
        {
            "source": "/api/responses",
            "destination": "/api/responses.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}